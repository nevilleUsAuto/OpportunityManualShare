<aura:component description="ManualRecordShare Component" implements="flexipage:availableForAllPageTypes,force:lightningQuickAction,force:hasRecordId" controller="ManualRecordShare_controller" access="global" >
    <aura:attribute name="sharingObjectName" type="String" description="The Name of the sObject to share records" access="global" />
    
    <aura:attribute name="storeLocation" type="List" default="{'Snellville','Stone Mountain'}" description="Populated with list of store location on load.  OnChange, get list of contacts at that location." />

    <aura:attribute name="sp1ID" type="ID" description="Sales Person 1 ID" />
    <aura:attribute name="sp2ID" type="ID" description="Sales Person 2 ID" />
    <aura:attribute name="recID" type="ID" description="The record ID to Share" />

    <aura:attribute name="contact" type="Contact[]" default="{'sobjectType' : 'Contact'}" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
        <lightning:layout multipleRows="true">

            <lightning:layoutItem padding="around-small" size="6" >
                    <c:strike_lookup
                        label="Sales Person 1"
                        object="User"
                        searchField="Name"
                        placeholder="Select Sales Person 1"
                        iconName="standard:user"
                        subtitleField="Alias"
                        order="Name"
                        limit="5"
                        loadingMessage="Loading..."
                        errorMessage="Invalid input"/>
            </lightning:layoutItem>

            <lightning:layoutItem padding="around-small" size="6" >
                    <c:strike_lookup
                    label="Sales Person 2"
                    object="User"
                    searchField="Name"
                    placeholder="Select Sales Person 2"
                    iconName="standard:user"
                    subtitleField="Alias"
                    order="Name"
                    limit="5"
                    loadingMessage="Loading..."
                    errorMessage="Invalid input"/>
            </lightning:layoutItem>

            <lightning:layoutItem padding="around-small" size="6" >
                <lightning:input name="sp1" type="String" label="Sales Person 1: " aura:id="sp1" value="{!v.contact.Name}" />
            </lightning:layoutItem>

            <lightning:layoutItem padding="around-small" size="6" >
                <lightning:input name="sp2" type="String" label="Sales Person 2: " aura:id="sp2" value="{!v.contact.Name}" />
            </lightning:layoutItem>
        
            <lightning:layoutItem padding="around-small" size="6" >
                Label for force:input
            </lightning:layoutItem>
            
            <lightning:layoutItem padding="around-small" size="6" >
                <force:inputField value="{!v.contact.Name}" />
            </lightning:layoutItem>
        </lightning:layout>

    
</aura:component>	
